############ Ejemplo de clase #########
################### r #################
x<-c(2.4,3.4,4.6,3.7,2.2,3.3,4.0,2.1)
y<-c(1.33,2.12,1.80,1.65,2.00,1.76,2.11,1.63)

Sxx <- sum((x)^2)-((sum(x))^2)/length(x)  
Syy <- sum((y)^2)-((sum(y))^2)/length(y) 
Sxy <- sum(x*y)-((sum(x))*(sum(y)))/length(y)
r<-Sxy/(sqrt(Sxx)*sqrt(Syy))
r
cor(x,y)

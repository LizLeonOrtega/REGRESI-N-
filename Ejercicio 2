facultad<-c("Economia","Ingenieria", "Arquitectura","Derecho")
licenciatura<-c("Actuaria","Ing Civil","Arquitectura","Derecho")
califalumno<-c(6,4,10,8)

class(facultad)
class(licenciatura)
class(califalumno)


rm(facultad)
rm(licenciatura)

pie(califalumno)
pie(califalumno,main="CalificaciÃ³n de Alumnos",sub="Fuente: UAEMex",col=c("blue","red","pink","green"),radius=1.0,clockwise = TRUE,lty=12) 
